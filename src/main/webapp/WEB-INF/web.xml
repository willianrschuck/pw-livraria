<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
  <context-param>
  	<param-name>primefaces.THEME</param-name>
  	<param-value>luna-blue</param-value>
  </context-param>
  <servlet>
    <servlet-name>Faces Servlet</servlet-name>
    <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>Faces Servlet</servlet-name>
    <url-pattern>*.xhtml</url-pattern>
  </servlet-mapping>
  
  
  <security-constraint>
  	<display-name>UsuarioAutenticado</display-name>
  	<web-resource-collection>
  		<web-resource-name>privado</web-resource-name>
  		<description/>
  		<url-pattern>/app/*</url-pattern>
  		<http-method>GET</http-method>
  		<http-method>POST</http-method>
  		<http-method>PUT</http-method>
  		<http-method>DELETE</http-method>
  	</web-resource-collection>
  	<auth-constraint>
  		<description/>
  		<role-name>USUARIO</role-name>
  		<role-name>ADMINISTRADOR</role-name>
  	</auth-constraint>
  </security-constraint>
  <security-constraint>
  	<display-name>https</display-name>
  	<web-resource-collection>
  		<web-resource-name>https</web-resource-name>
  		<description/>
  		<url-pattern>/*</url-pattern>
  		<http-method>GET</http-method>
  		<http-method>POST</http-method>
  		<http-method>PUT</http-method>
  		<http-method>DELETE</http-method>
  	</web-resource-collection>
  	<user-data-constraint>
  		<description/>
  		<transport-guarantee>CONFIDENTIAL</transport-guarantee>
  	</user-data-constraint>
  </security-constraint>
  <login-config>
  	<auth-method>FORM</auth-method>
  	<realm-name>pw-livraria</realm-name>
  	<form-login-config>
  		<form-login-page>/login.xhtml</form-login-page>
  		<form-error-page>/desautorizado.xhtml</form-error-page>
  	</form-login-config>
  </login-config>
  <security-role>
  	<description>Usu√°rio</description>
  	<role-name>USUARIO</role-name>
  </security-role>
  <security-role>
  	<description>Administrador</description>
  	<role-name>ADMINISTRADOR</role-name>
  </security-role>
</web-app>